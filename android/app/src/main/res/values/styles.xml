<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<item name="colorPrimary">@android:color/white</item>
		<item name="colorPrimaryDark">@color/darkred</item>
		<item name="colorAccent">@color/verydarkred</item>
		<item name="colorControlHighlight">@color/yellow</item>
		<item name="colorButtonNormal">@color/darkred</item>
		<item name="android:textViewStyle">@style/DefaultTextView</item>
	</style>

	<style name="DefaultTextView">
		<item name="android:textSize">@dimen/text_default</item>
	</style>

	<style name="DefaultButton">
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:padding">@dimen/margin_default</item>
	</style>

	<style name="TransparentButton">
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#000000</item>
		<item name="android:padding">@dimen/margin_half</item>
	</style>

	<style name="Label">
		<item name="android:background">@color/style_unknown</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:padding">@dimen/margin_half</item>
	</style>

	<style name="LabelBlue">
		<item name="android:background">@color/blue</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:padding">@dimen/margin_half</item>
	</style>

	<!-- Taken from http://stackoverflow.com/questions/10020466/android-4-0-sub-title-section-label-styling -->
	<style name="SectionHeader">
		<item name="android:drawablePadding">4dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:textColor">@color/darkred</item>
		<item name="android:textSize">13sp</item>
	</style>

</resources>
